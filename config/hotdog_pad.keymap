#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
  combos {
    compatible = "zmk,combos";

    combo_enable_studio {
      timeout-ms = <50>;
      key-positions = <0 1>;
      bindings = <&studio_unlock>;
    };
  };

  keymap {
    compatible = "zmk,keymap";

    base {
      bindings = < 
        &kp N1 
        &kp N2 
        &kp N3 
        &kp N4 
        &kp C_MUTE
        >;

      sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
    };
  };
};
